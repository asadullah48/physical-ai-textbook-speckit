# Physical AI Textbook Backend - Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Database (Neon Postgres)
# =============================================================================
# Use the pooler endpoint for connection pooling
# Format: postgresql://user:pass@ep-xxx-pooler.region.neon.tech/dbname?sslmode=require
DATABASE_URL=postgresql://user:password@ep-xxx-pooler.us-east-1.neon.tech/physical_ai_textbook?sslmode=require

# Connection pool settings
DB_POOL_MIN_SIZE=2
DB_POOL_MAX_SIZE=5
DB_CONNECTION_TIMEOUT=30.0

# =============================================================================
# Vector Store (Qdrant Cloud)
# =============================================================================
QDRANT_URL=https://your-cluster.cloud.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=textbook_content

# =============================================================================
# AI (Google Gemini)
# =============================================================================
GOOGLE_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-flash
EMBEDDING_MODEL=text-embedding-004

# =============================================================================
# Authentication (JWT)
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Application
# =============================================================================
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
